@model PayMe2.ViewModels.Categories.IndexViewModel
@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
    <a href="@Url.Action("Create", new { id = Model.InstanceId })" class="btn btn-default">Add category</a>
</p>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default users</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@Model.GetUsersText(item.DefaultUsers)</td>
            </tr>
        }
    </tbody>
</table>
